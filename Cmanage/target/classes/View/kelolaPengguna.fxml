<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" prefHeight="560.0" prefWidth="400.0" spacing="20.0" style="-fx-background-color: #F5F5F5; -fx-background-radius: 15;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.KelolaPenggunaController">
   <padding>
      <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
   </padding>
   
   <children>
      <!-- Title -->
      <Label style="-fx-text-fill: #2C8E8E; -fx-font-weight: bold;" text="Kelola Pengguna">
         <font>
            <Font size="24.0" />
         </font>
         <VBox.margin>
            <Insets bottom="10.0" />
         </VBox.margin>
      </Label>
      
      <!-- IdRuangan Field -->
      <VBox spacing="8.0">
         <children>
            <Label style="-fx-text-fill: #2C8E8E; -fx-font-size: 14px;" text="IdPengguna" />
            <TextField fx:id="txtIdPengguna" promptText="Masukkan Id Pengguna" style="-fx-background-color: white; -fx-background-radius: 8; -fx-border-color: #CCCCCC; -fx-border-radius: 8; -fx-border-width: 1; -fx-pref-height: 40;">
               <font>
                  <Font size="14.0" />
               </font>
            </TextField>
         </children>
      </VBox>
      
      <!-- Nama Ruangan Field -->
      <VBox spacing="8.0">
         <children>
            <Label style="-fx-text-fill: #2C8E8E; -fx-font-size: 14px;" text="Nama Lengkap" />
            <TextField fx:id="txtNamaLengkap" promptText="Masukkan Nama Lengkap" style="-fx-background-color: white; -fx-background-radius: 8; -fx-border-color: #CCCCCC; -fx-border-radius: 8; -fx-border-width: 1; -fx-pref-height: 40;">
               <font>
                  <Font size="14.0" />
               </font>
            </TextField>
         </children>
      </VBox>
      
      <!-- Lokasi Field -->
      <VBox spacing="8.0">
         <children>
            <Label style="-fx-text-fill: #2C8E8E; -fx-font-size: 14px;" text="Nomor Induk" />
            <TextField fx:id="txtNomorInduk" promptText="Masukkan Nomor Induk" style="-fx-background-color: white; -fx-background-radius: 8; -fx-border-color: #CCCCCC; -fx-border-radius: 8; -fx-border-width: 1; -fx-pref-height: 40;">
               <font>
                  <Font size="14.0" />
               </font>
            </TextField>
         </children>
      </VBox>
      
      <!-- Ruangan Field (Status/ComboBox) -->
      <VBox spacing="8.0">
         <children>
            <Label style="-fx-text-fill: #2C8E8E; -fx-font-size: 14px;" text="Password" />
            <TextField fx:id="txtPassword" promptText="Buat Password" style="-fx-background-color: white; -fx-background-radius: 8; -fx-border-color: #CCCCCC; -fx-border-radius: 8; -fx-border-width: 1; -fx-pref-height: 40;">
               <font>
                  <Font size="14.0" />
               </font>
            </TextField>
         </children>
      </VBox>
      
      <!-- Spacer -->
      <VBox VBox.vgrow="ALWAYS">
         <children>
            <Label style="-fx-text-fill: #2C8E8E; -fx-font-size: 14px;" text="Peran" />
            <ComboBox fx:id="cmbPeran" prefHeight="33.0" prefWidth="339.0" promptText="Berikan Peran" style="-fx-background-color: White; -fx-border-color: #CCCCCC; -fx-background-radius: 8; -fx-border-radius: 8; -fx-border-width: 1; -fx-pref-height: 40;" />
         </children></VBox>
      <VBox prefHeight="200.0" prefWidth="100.0" />
      
      <!-- Buttons -->
      <HBox alignment="CENTER" spacing="15.0">
         <children>
            <Button fx:id="btnEdit" mnemonicParsing="false" onAction="#handleButton" prefHeight="40.0" prefWidth="150.0" style="-fx-background-color: #D16002; -fx-text-fill: white; -fx-font-size: 14px; -fx-cursor: hand; -fx-background-radius: 8; -fx-font-weight: bold;" text="EDIT">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Button>
            <Button fx:id="btnTambah" layoutX="21.0" layoutY="10.0" mnemonicParsing="false" onAction="#handleButton" prefHeight="40.0" prefWidth="150.0" style="-fx-background-color: #2C8E8E; -fx-text-fill: white; -fx-font-size: 14px; -fx-cursor: hand; -fx-background-radius: 8; -fx-font-weight: bold;" text="TAMBAH">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Button>
            
            <Button fx:id="btnHapus" mnemonicParsing="false" onAction="#handleButton" prefHeight="40.0" prefWidth="150.0" style="-fx-background-color: #752A0B; -fx-border-color: #752A0B; -fx-border-width: 2; -fx-text-fill: white; -fx-font-size: 14px; -fx-cursor: hand; -fx-background-radius: 8; -fx-border-radius: 8; -fx-font-weight: bold;" text="HAPUS">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Button>
         </children>
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
      </HBox>
   </children>
</VBox>
