<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Point3D?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="vbKelolaRuangan" alignment="TOP_CENTER" prefHeight="493.0" prefWidth="400.0" spacing="20.0" style="-fx-background-color: #F5F5F5; -fx-background-radius: 15;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.KelolaJadwalController">
   <padding>
      <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
   </padding>
   
   <children>
      <!-- Title -->
      <Label style="-fx-text-fill: #2C8E8E; -fx-font-weight: bold;" text="Booking Jadwal">
         <font>
            <Font size="24.0" />
         </font>
         <VBox.margin>
            <Insets bottom="10.0" />
         </VBox.margin>
      </Label>
      
      <!-- IdRuangan Field -->
      <VBox spacing="8.0">
         <children>
            <Label style="-fx-text-fill: #2C8E8E; -fx-font-size: 14px;" text="Mata Kuliah" />
            <TextField fx:id="txtIdMatkul" promptText="Masukkan Id Mata Kuliah, contoh: AI306" style="-fx-background-color: white; -fx-background-radius: 8; -fx-border-color: #CCCCCC; -fx-border-radius: 8; -fx-border-width: 1; -fx-pref-height: 40;">
               <font>
                  <Font size="14.0" />
               </font>
            </TextField>
         </children>
      </VBox>
      
      <!-- Nama Ruangan Field -->
      <VBox prefHeight="319.0" prefWidth="340.0" spacing="8.0">
         <children>
            <Label style="-fx-text-fill: #2C8E8E; -fx-font-size: 14px;" text="Nama Ruangan" />
            <ComboBox fx:id="cmbRuangan" prefHeight="40.0" prefWidth="340.0" promptText="Pilih Ruangan" style="-fx-background-color: white; -fx-background-radius: 8; -fx-border-color: #CCCCCC; -fx-border-radius: 8; -fx-border-width: 1;">
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </ComboBox>
            <Label style="-fx-text-fill: #2C8E8E; -fx-font-size: 14px;" text="Tanggal" />
            <DatePicker id="inputTanggal" fx:id="dttanggal" prefHeight="32.0" prefWidth="339.0" style="-fx-background-color: white; -fx-background-radius: 8; -fx-border-color: #CCCCCC; -fx-border-radius: 8; -fx-border-width: 1;" styleClass="inputTanggal" stylesheets="@../Style/bookingkelasbaru.css" />
            <Label style="-fx-text-fill: #2C8E8E; -fx-font-size: 14px;" text="Durasi Kelas" />
            <TextField fx:id="txtdurasikelas" prefHeight="20.0" prefWidth="339.0" promptText="Masukkan Durasi Kelas, contoh: 09:00 - 13:00" style="-fx-background-color: white; -fx-background-radius: 8; -fx-border-color: #CCCCCC; -fx-border-radius: 8; -fx-border-width: 1; -fx-pref-height: 40;">
               <font>
                  <Font size="14.0" />
               </font>
            </TextField>
            <Label layoutX="10.0" layoutY="86.0" style="-fx-text-fill: #2C8E8E; -fx-font-size: 14px;" text="Kelas" />
            <TextField fx:id="txtnamaKelas" layoutX="10.0" layoutY="172.0" prefHeight="20.0" prefWidth="339.0" promptText="Masukkan Kelas, contoh: 3A" style="-fx-background-color: white; -fx-background-radius: 8; -fx-border-color: #CCCCCC; -fx-border-radius: 8; -fx-border-width: 1; -fx-pref-height: 40;">
               <font>
                  <Font size="14.0" />
               </font>
            </TextField>
         </children>
      </VBox>
      
      <!-- Buttons -->
      <HBox alignment="CENTER" spacing="15.0">
         <children>
            <Button fx:id="btnTambah" layoutX="188.0" layoutY="10.0" mnemonicParsing="false" onAction="#handleButton" prefHeight="40.0" prefWidth="150.0" style="-fx-background-color: #2C8E8E; -fx-text-fill: white; -fx-font-size: 14px; -fx-cursor: hand; -fx-background-radius: 8; -fx-font-weight: bold;" text="TAMBAH">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Button>
            
                  <Button fx:id="btnBatal" mnemonicParsing="false" onAction="#handleButton" prefHeight="40.0" prefWidth="150.0" style="-fx-background-color: white; -fx-border-color: #2C8E8E; -fx-border-width: 2; -fx-text-fill: #2C8E8E; -fx-font-size: 14px; -fx-cursor: hand; -fx-background-radius: 8; -fx-border-radius: 8; -fx-font-weight: bold;" text="BATAL">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Button>
         </children>
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
      </HBox>
   </children>
   <opaqueInsets>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </opaqueInsets>
   <rotationAxis>
      <Point3D x="10.0" y="10.0" z="10.0" />
   </rotationAxis>
</VBox>
